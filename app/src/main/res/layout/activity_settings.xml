<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/username_tag"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="40dp"
        android:layout_marginStart="40dp"
        android:text="昵称"
        android:textSize="16sp"
        android:textStyle="bold"
        />

    <EditText
        android:id="@+id/nickname_edit"
        android:layout_width="320dp"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/username_tag"
        android:layout_alignStart="@+id/username_tag"
        android:layout_below="@+id/username_tag"
        android:textSize="20sp"
        android:textStyle="bold"
        android:inputType="textMultiLine"
        android:hint=""
        android:maxLines="14"
        />

    <TextView
        android:id="@+id/password_tag"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/nickname_edit"
        android:layout_alignStart="@+id/nickname_edit"
        android:layout_below="@+id/nickname_edit"
        android:text="密码"
        android:textSize="16sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/password_edit"
        android:layout_width="320dp"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/password_tag"
        android:layout_alignStart="@+id/password_tag"
        android:layout_below="@+id/password_tag"
        android:textSize="20sp"
        android:textStyle="bold"
        android:inputType="text"
        android:maxLines="14"
        />

    <TextView
        android:id="@+id/user_height"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/password_edit"
        android:layout_alignStart="@+id/password_edit"
        android:layout_below="@+id/password_edit"
        android:text="身高"
        android:textSize="16sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/height_edit"
        android:layout_width="320dp"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/user_height"
        android:layout_alignStart="@+id/user_height"
        android:layout_below="@+id/user_height"
        android:textSize="20sp"
        android:textStyle="bold"
        android:inputType="number"
        android:maxLines="14"
        />

    <TextView
        android:id="@+id/user_weight"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/height_edit"
        android:layout_alignStart="@+id/height_edit"
        android:layout_below="@+id/height_edit"
        android:text="体重"
        android:textSize="16sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/weight_edit"
        android:layout_width="320dp"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/user_weight"
        android:layout_alignStart="@+id/user_weight"
        android:layout_below="@+id/user_weight"
        android:textSize="20sp"
        android:textStyle="bold"
        android:inputType="number"
        android:maxLines="14"
        />

    <Button
        android:id="@+id/user_modify"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/weight_edit"
        android:layout_centerHorizontal="true"
        android:text="确认修改"
        android:textSize="20sp" />

    <Button
        android:id="@+id/logout"
        android:layout_width="320dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/weight_edit"
        android:text="退出登录"
        android:textSize="25dp"
        android:textColor="@color/logout_text"/>

</RelativeLayout>
